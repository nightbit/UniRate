<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".STUDIENRICHTUNG.BBEFach" android:contentDescription="@string/nextButton3"
        android:background="#3F51B5">

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_Semester"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            app:layout_constraintHorizontal_bias="1.0">

        <AutoCompleteTextView
                android:id="@+id/act_Semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:hint="Semester?"
                android:textSize="30sp"
                android:textStyle="italic"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp" android:textColor="#000000" android:textColorHint="#000000"
                android:drawableTint="#3F51B5" android:textColorHighlight="#000000" android:textColorLink="#000000"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_Faecher"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="360dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            app:layout_constraintHorizontal_bias="1.0">

        <AutoCompleteTextView
                android:id="@+id/act_Faecher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:hint="Fach?"
                android:textSize="30sp"
                android:textStyle="italic"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp" android:textColor="#000000" android:textColorHint="#000000"
                android:textColorHighlight="#000000" android:drawableTint="#3F51B5" android:textColorLink="#000000"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/birdwhyy"
            android:id="@+id/nextButton3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.889"
            app:layout_constraintVertical_bias="0.948"
            android:contentDescription="@string/nextButton3"/>

</androidx.constraintlayout.widget.ConstraintLayout>