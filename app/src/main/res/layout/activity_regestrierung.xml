<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Regestrierung" android:background="#3F51B5">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPassRegist"
            android:hint="Hier Passwort eingeben"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="48dp"
            android:layout_marginStart="41dp"
            app:layout_constraintTop_toBottomOf="@+id/editMailRegist" android:textColorHint="#000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPass2Regist"
            android:hint="Passwort erneut eingeben"
            app:layout_constraintStart_toStartOf="@+id/editPassRegist" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editPassRegist" android:textColorHighlight="#000000"
            android:textColorHint="#000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Hier Email eingeben" android:id="@+id/editMailRegist"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="78dp" android:layout_marginStart="41dp" android:textColor="#000000"
            android:textColorHint="#000000" android:textColorHighlight="#000000" android:shadowColor="#3F51B5"/>
    <Button
            android:text="Registrieren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonRegist"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="65dp" android:layout_marginStart="44dp"
            app:layout_constraintTop_toBottomOf="@+id/editPass2Regist" android:background="#3F51B5"
            android:backgroundTint="#3F51B5"/>


</androidx.constraintlayout.widget.ConstraintLayout>