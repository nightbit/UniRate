<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Regestrierung" android:background="#3F51B5" android:backgroundTint="#3F51B5">
    <EditText
            android:layout_width="294dp"
            android:layout_height="78dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPassRegist"
            android:hint="Hier Passwort eingeben"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.338" app:layout_constraintVertical_bias="0.52"/>
    <EditText
            android:layout_width="296dp"
            android:layout_height="81dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPass2Regist"
            android:hint="Passwort erneut eingeben"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.33" app:layout_constraintVertical_bias="0.67"/>
    <EditText
            android:layout_width="293dp"
            android:layout_height="83dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Hier Email eingeben" android:id="@+id/editMailRegist"
            android:textColor="#000000"
            android:textColorHint="#000000" android:textColorHighlight="#000000" android:shadowColor="#3F51B5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.347"
            app:layout_constraintVertical_bias="0.378"/>
    <Button
            android:text="Registrieren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonRegist"
            android:background="#3F51B5"
            android:backgroundTint="#3F51B5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.834"
            app:layout_constraintVertical_bias="0.938"/>
    <TextView
            android:text="REGISTRIERUNG"
            android:layout_width="272dp"
            android:layout_height="75dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.408"
            app:layout_constraintVertical_bias="0.14" android:textSize="36sp" android:backgroundTint="#000000"
            android:foregroundTint="#000000" android:textColor="#000000"/>


</androidx.constraintlayout.widget.ConstraintLayout>