<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".loggin" android:background="#3F51B5">

    <TextView
            android:text="Einloggen"
            android:layout_width="122dp"
            android:layout_height="0dp" android:id="@+id/textView18"
            android:textStyle="bold" android:textSize="24sp"
            android:layout_marginTop="54dp" android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/maiLoggin" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:textColorHint="#000000" android:textColorHighlight="#000000"
            android:textColor="#000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/maiLoggin"
            android:hint="Hier E-Mail eingeben"
            app:layout_constraintStart_toStartOf="@+id/textView18" app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/passwortLoggin"
            android:textColorHighlight="#000000" android:textColorHint="#000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwortLoggin"
            android:hint="Hier Passwort eingeben"
            app:layout_constraintStart_toStartOf="@+id/maiLoggin" app:layout_constraintTop_toBottomOf="@+id/maiLoggin"
            android:layout_marginBottom="7dp" app:layout_constraintBottom_toTopOf="@+id/checkLoggin"
            android:textColorHighlight="#000000" android:textColorHint="#000000"/>
    <CheckBox
            android:text="Eingeloggt Bleiben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkLoggin"
            app:layout_constraintStart_toStartOf="@+id/passwortLoggin"
            app:layout_constraintTop_toBottomOf="@+id/passwortLoggin" android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonEinloggen" android:textColor="#000000"
            android:textColorHighlight="#000000" android:textColorHint="#000000"/>
    <Button
            android:text="Registrieren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonRegistrieren"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintTop_toBottomOf="@+id/buttonEinloggen"
            android:layout_marginBottom="141dp" android:backgroundTint="#3F51B5"/>
    <Button
            android:text="Einloggen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonEinloggen"
            app:layout_constraintTop_toBottomOf="@+id/checkLoggin"
            android:layout_marginEnd="42dp" android:layout_marginBottom="202dp"
            app:layout_constraintEnd_toEndOf="@+id/checkLoggin"
            app:layout_constraintBottom_toTopOf="@+id/buttonRegistrieren" android:backgroundTint="#3F51B5"/>


</androidx.constraintlayout.widget.ConstraintLayout>