<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".loggin" android:background="#3F51B5">

    <TextView
            android:text="Einloggen"
            android:layout_width="180dp"
            android:layout_height="55dp" android:id="@+id/textView18"
            android:textStyle="bold" android:textSize="36sp"
            android:textColorHint="#000000" android:textColorHighlight="#000000"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.169" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="277dp"
            android:layout_height="73dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/maiLoggin"
            android:hint="Hier E-Mail eingeben"
            android:textColorHighlight="#000000" android:textColorHint="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.238"
            app:layout_constraintVertical_bias="0.41"/>
    <EditText
            android:layout_width="283dp"
            android:layout_height="77dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwortLoggin"
            android:hint="Hier Passwort eingeben"
            android:textColorHighlight="#000000" android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.25" app:layout_constraintVertical_bias="0.558"/>
    <CheckBox
            android:text="Eingeloggt Bleiben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkLoggin"
            android:textColor="#000000"
            android:textColorHighlight="#000000" android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.122" app:layout_constraintVertical_bias="0.686"/>
    <Button
            android:text="Registrieren"
            android:layout_width="145dp"
            android:layout_height="67dp" android:id="@+id/buttonRegistrieren"
            android:backgroundTint="#3F51B5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintVertical_bias="0.919"/>
    <Button
            android:text="Einloggen"
            android:layout_width="133dp"
            android:layout_height="67dp" android:id="@+id/buttonEinloggen"
            android:backgroundTint="#3F51B5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintVertical_bias="0.919"/>


</androidx.constraintlayout.widget.ConstraintLayout>